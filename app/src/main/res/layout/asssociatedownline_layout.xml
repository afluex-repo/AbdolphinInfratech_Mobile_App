<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="12dp"
                    android:paddingTop="5dp"
                    android:textColor="#a7a7a7"
                    android:textStyle="bold"
                    android:text="LoginDetails"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/LoginDetails"
                    android:textSize="12dp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="#f3f3f3"
                    android:background="@drawable/textview_border"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="12dp"
                    android:paddingTop="5dp"
                    android:textColor="#a7a7a7"
                    android:textStyle="bold"
                    android:text="TotalBusiness"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="#f3f3f3"
                    android:background="@drawable/textview_border"
                    android:id="@+id/TotalBusiness"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:visibility="gone"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="11dp"
                    android:paddingTop="5dp"
                    android:textColor="#a7a7a7"
                    android:textStyle="bold"
                    android:text="TeamBusiness Amount"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TeamBusinessname"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="#f3f3f3"
                    android:background="@drawable/textview_border"
                    android:textSize="12dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:visibility="gone"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="11dp"
                    android:paddingTop="5dp"
                    android:textColor="#a7a7a7"
                    android:textStyle="bold"
                    android:text="DirectMember Joining"/>
                <TextView
                    android:id="@+id/DirectMember"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:backgroundTint="#f3f3f3"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:visibility="gone"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="TeamMember Joining"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:textColor="#a7a7a7" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="#f3f3f3"
                    android:background="@drawable/textview_border"
                    android:id="@+id/TeamMemberJoining"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Income"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:textColor="#a7a7a7" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="#f3f3f3"
                    android:background="@drawable/textview_border"
                    android:id="@+id/Income"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>